<body>

    <h1>Multiplication Time Table Generator</h1>
    <input type="number" id="num" placeholder="Enter a number">
    <button onclick="printTable()">Generate Table</button>

    <table id="tableOutput"></table>

    <script>
        function printTable() {
            const num = document.getElementById("num").value;
            const table = document.getElementById("tableOutput");
            table.innerHTML = ""; // Clear previous table

            if (num === "") {
                alert("Please enter a number!");
                return;
            }

            for (let i = 1; i <= 10; i++) {
                let row = `<tr><td>${num} x ${i}</td><td>=</td><td>${num * i}</td></tr>`;
                table.innerHTML += row;
            }
        }
    </script>

</body>
